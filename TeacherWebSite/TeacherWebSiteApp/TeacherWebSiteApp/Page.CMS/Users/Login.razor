@page "/login"
@inject AuthenticationStateProvider provider
@inject NavigationManager NavManager
@namespace TeacherWebSiteApp.Page.CMS.Users


<div class="container" style="margin-top:270px">
    <ValidationBlock Messages="@messages"></ValidationBlock>
    <div class="form-block">
        <center>
            <h4>Вход в CMS</h4>
        </center>
    </div>
    <div style="margin-left: 400px; margin-top: 20px">
        <Row>
            <AntDesign.Col>
                <AntDesign.Input @bind-Value="login" Placeholder="Логин" Type="text" />
            </AntDesign.Col>
            <AntDesign.Col Style="padding-left: 80px">
                <AntDesign.InputPassword @bind-Value="password" Placeholder="Пароль" Type="password" />
            </AntDesign.Col>
        </Row>
        <Row>
            <AntDesign.Col Style="margin-top: 20px; padding-left: 50px">
                <AntDesign.Button Type="@AntDesign.ButtonType.Primary" @onclick="LogIn">Вход</AntDesign.Button>
            </AntDesign.Col>
        </Row>
    </div>
</div>



@code {

    string login;
    string password;

    string[] messages = new string[] { };

    void LogIn()
    {
        ProducedAuthenticationStateProvider p = provider as ProducedAuthenticationStateProvider;
        var result = p.Login(login, password);

        if (result == null)
        {
            NavManager.NavigateTo("/cms", true);
        }
        else messages = new string[] { result };

    }
}
