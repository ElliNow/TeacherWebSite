<div style="margin-left: 450px; margin-top: 150px">
    <div class="container">
        <Row>

            <div class="col-md-offset-3 col-md-6">
                <form class="form-horizontal">
                    <span class="heading">АВТОРИЗАЦИЯ</span>
                    <div class="form-group">
                        <input type="text" class="form-control" @bind="login" id="inputfield" placeholder="Логин">
                        <i class="fa fa-user"></i>
                    </div>
                    <div class="form-group help">
                        <input type="password" class="form-control" @bind="password" id="inputPassword" placeholder="Пароль">
                        <i class="fa fa-lock"></i>
                        <a href="#" class="fa fa-question-circle"></a>
                    </div>
                    <div class="form-group">
                        <button @onclick="LogIn" type="submit" class="btn btn-default">ВХОД</button>
                    </div>
                </form>
            </div>
        </Row>
    </div>
</div>


@code {

    string login;
    string password;

    string[] messages = new string[] { };

    void LogIn()
    {
        ProducedAuthenticationStateProvider p = provider as ProducedAuthenticationStateProvider;
        var result = p.Login(login, password);

        if (result == null)
        {
            NavManager.NavigateTo("/cms", true);
        }
        else messages = new string[] { result };

    }
}
