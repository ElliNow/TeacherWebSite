
<div class="row" style="height: 500px">
    <div class="col" style="background-color:aquamarine; height: 600px;
        background:url( data:image/jpg;base64,@Convert.ToBase64String(Picture) ); background-size: cover;
        background-position: center; background-repeat: no-repeat;">
        <Row>
            <AntDesign.Col Style="margin-top: 135px; margin-left:50px">
                <h3 style="font-family: Gagalin; font-size: 38px; color: whitesmoke">
                    @Title
                </h3>
                <h3 style="font-family: Gagalin; letter-spacing:2px; font-size: 38px; color: whitesmoke">
                    @Text
                </h3>
            </AntDesign.Col>
        </Row>
    </div>
</div>





@code {

    [Parameter]
    public byte[] Picture { get; set; }
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Text { get; set; }
}
